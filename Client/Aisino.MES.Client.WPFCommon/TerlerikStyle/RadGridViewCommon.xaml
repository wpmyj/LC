    <!--分组区域相关样式设置-->
    <Style x:Key="GridGroupPanelStyle" TargetType="telerik:GridViewGroupPanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="telerik:GridViewGroupPanel">
                    <StackPanel Background="#FF5DBDE5" Orientation="Horizontal">
                        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        <!--<TextBlock Text="请将需要排序的列拖拽至此" Margin="0, 0, 0, 0"  IsHitTestVisible="False" VerticalAlignment="Center" Foreground="White" FontFamily="Microsoft YaHei UI" FontSize="18" Visibility="{TemplateBinding HasItems, Converter={StaticResource invertedBooleanConverter}}"  />-->
                        <TextBlock x:Name="panelText" Foreground="White" FontFamily="Microsoft YaHei UI" FontSize="18" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="False" Margin="{TemplateBinding Padding}" Text="请将需要分组的列拖拽至此" VerticalAlignment="Center"></TextBlock>
                        <TextBlock x:Name="panelTextGrouped" Foreground="White" FontFamily="Microsoft YaHei UI" FontSize="18" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="False" Margin="{TemplateBinding Padding}"  Text="当前分组:" Visibility="Collapsed" VerticalAlignment="Center"/>
                        <!--<Button x:Name="btnAdd" Foreground="White" Background="Transparent"  Margin="550,0,0,0" Width="20" Height="20" Click="Button_Click">                           
                            <Canvas Width="15" Height="15" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                <Path Width="15" Height="15" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Fill="{DynamicResource BlackBrush}" Data="F1 M 35,19L 41,19L 41,35L 57,35L 57,41L 41,41L 41,57L 35,57L 35,41L 19,41L 19,35L 35,35L 35,19 Z "/>
                            </Canvas>
                        </Button>-->
                        <ItemsPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasItems" Value="True">
                            <Setter Property="Visibility" TargetName="panelText" Value="Collapsed"/>
                            <Setter Property="Visibility" TargetName="panelTextGrouped" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Horizontal" VerticalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

