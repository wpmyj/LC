                            <Label HorizontalContentAlignment="Center"  Content="{Binding Path=Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            </Border>-->
        </DockPanel>
    </Viewbox>
</src:BusinessBasePage>
